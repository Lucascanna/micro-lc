{
  "name": "micro-lc",
  "version": "2.0.0-rc0",
  "description": "The micro frontend solution by Mia-Platform",
  "license": "SEE LICENSE IN LICENSE",
  "packageManager": "yarn@3.2.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "c": "yarn workspace @micro-lc/iconic",
    "i": "yarn workspace @micro-lc/interfaces",
    "l": "yarn workspace @micro-lc/layout",
    "o": "yarn workspace @micro-lc/orchestrator",
    "cleanup": "yarn workspaces foreach --all --parallel run cleanup",
    "lint:code": "eslint . --ext .mjs,.js,.jsx,.ts,.tsx,.schema.json --resolve-plugins-relative-to .",
    "lint:style": "stylelint **/*.{css,less}",
    "lint": "yarn lint:code && yarn lint:style",
    "test": "yarn workspaces foreach --all run test",
    "coverage": "yarn workspaces foreach --all run coverage",
    "playground": "yarn node playground.mjs"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.6",
    "@types/glob": "^8.0.0",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-esbuild": "^0.3.2",
    "confusing-browser-globals": "^1.0.11",
    "esbuild": "^0.15.10",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsonc": "^2.4.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "eslint-visitor-keys": "^3.3.0",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "jsonc-eslint-parser": "^2.1.0",
    "lit-html": "^2.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.17",
    "postcss-less": "^6.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.13.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "typescript": "^4.8.3",
    "vite": "^3.1.4"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
