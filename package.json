{
  "name": "micro-lc",
  "version": "2.0.0-rc0",
  "description": "The micro frontend solution by Mia-Platform",
  "license": "SEE LICENSE IN LICENSE",
  "packageManager": "yarn@3.2.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "c": "yarn workspace @micro-lc/iconic",
    "i": "yarn workspace @micro-lc/interfaces",
    "l": "yarn workspace @micro-lc/layout",
    "o": "yarn workspace @micro-lc/orchestrator",
    "lint": "eslint . --ext .mjs,.js,.jsx,.ts,.tsx,.schema.json --resolve-plugins-relative-to .",
    "test": "yarn workspaces foreach --all run test",
    "coverage": "yarn workspaces foreach --all run coverage",
    "build": "yarn workspaces foreach --all run build",
    "postinstall": "husky install && yarn workspaces foreach --all run postinstall"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.6",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsonc": "^2.4.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "eslint-visitor-keys": "^3.3.0",
    "husky": "^8.0.1",
    "jsonc-eslint-parser": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
