{
    "version": "0.2.0",
    "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "env": {
        "TS_NODE_COMPILER_OPTIONS": "{\"module\":\"CommonJS\"}"
      },
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "o",
        "ts-mocha",
        "src/**/${fileBasename}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
    }
  ]
}
