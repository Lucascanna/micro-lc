{
  "name": "@micro-lc/orchestrator",
  "version": "0.1.0",
  "module": "./dist/micro-lc.production.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "cleanup": "yarn run -T rimraf ./dist ./.nyc_output ./coverage ./node_modules stats.html",
    "esm": "ts-node scripts/esm-url-generator.ts",
    "build:externals": "ts-node scripts/pre-bundle.ts",
    "build:types": "tsc --project ./scripts/tsconfig.types.json && echo \"âœ“ check types\"",
    "build:es": "ts-node scripts/compile.esm.ts",
    "build:cjs": "ts-node scripts/compile.cjs.ts",
    "build:prod": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build": "yarn run -T run-s cleanup build:types build:es build:cjs build:dev build:prod",
    "test:unit": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' ts-mocha src/**/test/**/*.test.ts",
    "test:chromium": "wtr \"test/**/*.test.ts\" --node-resolve --playwright --browsers chromium",
    "test:firefox": "wtr \"test/**/*.test.ts\" --node-resolve --playwright --browsers firefox",
    "test:safari": "wtr \"test/**/*.test.ts\" --node-resolve --playwright --browsers webkit",
    "test": "yarn run -T run-s test:unit test:chromium",
    "coverage:unit": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' nyc ts-mocha src/**/test/**/*.test.ts",
    "coverage:browser": "yarn test:chromium --coverage",
    "coverage:cobertura:merge": "cobertura-merge -o coverage/cobertura-coverage.xml package1=coverage/unit/cobertura-coverage.xml package2=coverage/browser/cobertura-coverage.xml",
    "coverage:lcov:merge": "yarn dlx lcov-result-merger 'coverage/*/lcov.info' coverage/lcov.info",
    "coverage": "yarn run -T run-s coverage:unit coverage:browser coverage:cobertura:merge coverage:lcov:merge",
    "serve": "wds --node-resolve --watch",
    "serve:bundle": "cd dist && python3 -m http.server",
    "postinstall": "yarn build:externals"
  },
  "devDependencies": {
    "@babel/runtime": "^7.19.0",
    "@micro-lc/interfaces": "workspace:*",
    "@open-wc/testing": "^3.1.6",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/chai": "^4.3.3",
    "@types/chai-string": "^1.4.2",
    "@types/glob": "^8.0.0",
    "@types/lodash-es": "^4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.18",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.8",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-esbuild": "^0.3.2",
    "@web/dev-server-rollup": "^0.3.19",
    "@web/test-runner": "^0.14.0",
    "@web/test-runner-playwright": "^0.8.10",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "chai": "^4.3.6",
    "chai-string": "^1.5.0",
    "cobertura-merge": "^1.0.3",
    "es-module-shims": "^1.5.18",
    "esbuild": "^0.15.9",
    "glob": "^8.0.3",
    "lodash-es": "^4.17.21",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "rollup-plugin-visualizer": "^5.8.1",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "vite": "^3.1.3"
  },
  "dependencies": {
    "lit-html": "^2.3.1",
    "qiankun": "^2.8.0"
  },
  "peerDependencies": {
    "ajv": "*",
    "ajv-format": "*",
    "es-module-shims": "*"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
