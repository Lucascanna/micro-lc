{
  "name": "@micro-lc/orchestrator",
  "version": "2.0.0-rc0",
  "scripts": {
    "cleanup": "yarn run -T rimraf ./dist ./src/bundles stats.html",
    "build:prod": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build": "yarn run -T run-s cleanup build:dev build:prod",
    "test:unit": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"CommonJS\" }' ts-mocha src/**/test/**/*.test.ts",
    "test:chromium": "wtr \"test/**/*.test.ts\" --node-resolve --playwright --browsers chromium",
    "test:firefox": "wtr \"test/**/*.test.ts\" --node-resolve --playwright --browsers firefox",
    "test:safari": "wtr \"test/**/*.test.ts\" --node-resolve --playwright --browsers webkit",
    "test": "yarn run -T run-s test:unit test:chromium",
    "coverage:unit": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' nyc ts-mocha src/**/test/**/*.test.ts",
    "coverage:browser": "yarn test:chromium --coverage",
    "coverage:cobertura:merge": "cobertura-merge -o coverage/cobertura-coverage.xml package1=coverage/unit/cobertura-coverage.xml package2=coverage/browser/cobertura-coverage.xml",
    "coverage:lcov:merge": "lcov-result-merger 'coverage/*/lcov.info' coverage/lcov.info",
    "coverage": "yarn run -T run-s coverage:unit coverage:browser coverage:cobertura:merge coverage:lcov:merge",
    "serve:bundle": "cd dist && python3 -m http.server"
  },
  "devDependencies": {
    "@micro-lc/interfaces": "workspace:*",
    "@open-wc/testing": "^3.1.6",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/chai": "^4.3.3",
    "@types/chai-string": "^1.4.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.18",
    "@types/sinon": "^10.0.13",
    "@web/dev-server-esbuild": "^0.3.2",
    "@web/dev-server-rollup": "^0.3.19",
    "@web/test-runner": "^0.14.0",
    "@web/test-runner-playwright": "^0.8.10",
    "ajv": "^8.11.0",
    "chai": "^4.3.6",
    "chai-string": "^1.5.0",
    "cobertura-merge": "^1.0.3",
    "lcov-result-merger": "^3.3.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "rollup-plugin-visualizer": "^5.8.1",
    "sinon": "^14.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "vite": "^3.1.3"
  },
  "dependencies": {
    "es-module-shims": "^1.5.18",
    "lit-html": "^2.3.1",
    "qiankun": "^2.8.0"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
