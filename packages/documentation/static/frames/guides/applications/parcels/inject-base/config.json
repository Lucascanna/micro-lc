{
  "$schema": "https://cdn.jsdelivr.net/npm/@micro-lc/interfaces@latest/schemas/v2/config.schema.json",
  "version": 2,
  "settings": {
    "defaultUrl": "./browser/",
    "4xx": {
      "404": {
        "integrationMode": "parcel",
        "entry": "http://localhost:8000/packages/orchestrator/dist/404.html"
      }
    },
    "5xx": {
      "500": {
        "integrationMode": "parcel",
        "entry": "http://localhost:8000/packages/orchestrator/dist/500.html"
      }
    }
  },
  "layout": {
    "sources": "http://localhost:8000/packages/layout/dist/mlc-layout.js",
    "content": [
      {
        "tag": "mlc-layout",
        "properties": {
          "mode": "topBar",
          "logo": {
            "url": "https://avatars.githubusercontent.com/u/92730708?s=200&v=4"
          },
          "menuItems": [
            {
              "icon": {
                "library": "@ant-design/icons-svg",
                "selector": "GlobalOutlined"
              },
              "id": "browser",
              "label": "React :: Browser router",
              "type": "application"
            },
            {
              "id": "hash",
              "icon": {
                "library": "@ant-design/icons-svg",
                "selector": "BorderlessTableOutlined"
              },
              "label": "React :: Hash router",
              "type": "application"
            }
          ]
        }
      }
    ]
  },
  "applications": {
    "browser": {
      "integrationMode": "parcel",
      "injectBase": true,
      "route": "./browser/",
      "entry": "/applications/react-browser-router/"
    },
    "hash": {
      "integrationMode": "parcel",
      "route": "./hash/",
      "entry": "/applications/react-hash-router/"
    }
  }
}
