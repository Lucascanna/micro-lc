{
  "$schema": "../../../../../../interfaces/schemas/v2/config.schema.json",
  "version": 2,
  "settings": {
    "defaultUrl": "./orders",
    "composerUri": "http://localhost:8000/packages/composer/dist/composer.production.js"
  },
  "layout": {
    "sources": "http://localhost:8000/packages/layout/dist/mlc-layout.js",
    "content": [
      {
        "tag": "mlc-antd-theme-manager",
        "properties": {
          "nodes": {
            "#layout-container": {
              "height": "100%",
              "width": "100%",
              "display": "grid",
              "grid-template-rows": "1fr min-content"
            },
            "#manager-container": {
              "border": "1px solid lightgray",
              "width":"calc(100% - 16px - 24px)",
              "margin": "8px",
              "padding": "12px",
              "display": "grid",
              "grid-template-columns": "1fr 1fr 1fr",
              "grid-template-rows": "min-content min-content",
              "row-gap": "8px",
              "column-gap": "16px"
            },
            ".input-container": {
              "height": "fit-content",
              "display": "flex",
              "align-items": "center"
            },
            ".input-container label": {
              "margin-left": "8px"
            }
          }
        }
      },
      {
        "tag": "div",
        "attributes": {
          "id": "layout-container"
        },
        "content": [
          {
            "tag": "mlc-layout",
            "attributes": {
              "style": "width: 100%;"
            },
            "properties": {
              "mode": "topBar",
              "logo": {
                "url": "https://avatars.githubusercontent.com/u/92730708?s=200&v=4"
              },
              "menuItems": [
                {
                  "icon": {
                    "library": "@ant-design/icons-svg",
                    "selector": "ShoppingOutlined"
                  },
                  "id": "orders",
                  "label": "Orders",
                  "type": "application"
                }
              ]
            }
          },
          {
            "tag": "div",
            "attributes": {
              "id": "manager-container"
            },
            "content": [
              {
                "tag": "div",
                "attributes": {
                  "class": "input-container"
                },
                "content": [
                  {
                    "tag": "input",
                    "attributes": {
                      "type": "color",
                      "id": "primary-color",
                      "name": "primary-color",
                      "value": "#1890FF"
                    }
                  },
                  {
                    "tag": "label",
                    "attributes": {
                      "for": "primary-color"
                    },
                    "content": "primary-color"
                  }
                ]
              },
              {
                "tag": "div",
                "attributes": {
                  "class": "input-container"
                },
                "content": [
                  {
                    "tag": "input",
                    "attributes": {
                      "type": "color",
                      "id": "info-color",
                      "name": "info-color",
                      "value": "#1890FF"
                    }
                  },
                  {
                    "tag": "label",
                    "attributes": {
                      "for": "info-color"
                    },
                    "content": "info-color"
                  }
                ]
              },
              {
                "tag": "div",
                "attributes": {
                  "class": "input-container"
                },
                "content": [
                  {
                    "tag": "input",
                    "attributes": {
                      "type": "color",
                      "id": "success-color",
                      "name": "success-color",
                      "value": "#52C41A"
                    }
                  },
                  {
                    "tag": "label",
                    "attributes": {
                      "for": "success-color"
                    },
                    "content": "success-color"
                  }
                ]
              },
              {
                "tag": "div",
                "attributes": {
                  "class": "input-container"
                },
                "content": [
                  {
                    "tag": "input",
                    "attributes": {
                      "type": "color",
                      "id": "processing-color",
                      "name": "processing-color",
                      "value": "#1890FF"
                    }
                  },
                  {
                    "tag": "label",
                    "attributes": {
                      "for": "processing-color"
                    },
                    "content": "processing-color"
                  }
                ]
              },
              {
                "tag": "div",
                "attributes": {
                  "class": "input-container"
                },
                "content": [
                  {
                    "tag": "input",
                    "attributes": {
                      "type": "color",
                      "id": "error-color",
                      "name": "error-color",
                      "value": "#FF4D4"
                    }
                  },
                  {
                    "tag": "label",
                    "attributes": {
                      "for": "error-color"
                    },
                    "content": "error-color"
                  }
                ]
              },
              {
                "tag": "div",
                "attributes": {
                  "class": "input-container"
                },
                "content": [
                  {
                    "tag": "input",
                    "attributes": {
                      "type": "color",
                      "id": "warning-color",
                      "name": "warning-color",
                      "value": "#FAAD14"
                    }
                  },
                  {
                    "tag": "label",
                    "attributes": {
                      "for": "warning-color"
                    },
                    "content": "warning-color"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "applications": {
    "orders": {
      "integrationMode": "compose",
      "route": "./orders",
      "config": {
        "content": [
          {
            "tag": "div",
            "attributes": {
              "class": "content",
              "style": "color: var(--micro-lc-primary-color);"
            },
            "content": "var(--micro-lc-primary-color)"
          }
        ]
      }
    }
  }
}
