{
  "name": "@micro-lc/interfaces",
  "version": "0.1.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/types/index.d.ts",
  "bin": "./dist/cjs/cli/index.js",
  "scripts": {
    "make-types-from-schemas": "node ./scripts/make-types.mjs",
    "make-types": "yarn tsc --project ./scripts/tsconfig.types.json",
    "check:types": "yarn run -T run-s make-types-from-schemas make-types",
    "build:es": "ts-node scripts/compile.esm.ts",
    "build:cjs": "ts-node scripts/compile.cjs.ts",
    "build:cli": "node ./scripts/build-cli.mjs",
    "build": "yarn run -T run-p build:es build:cjs",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"CommonJS\" }' ts-mocha",
    "coverage": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"CommonJS\" }' nyc ts-mocha",
    "cli": "yarn ts-node ./cli"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/eslint": "^8.4.6",
    "@types/glob": "^8.0.0",
    "@types/mkdirp": "^1.0.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.0",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "axios": "^0.27.2",
    "chai": "^4.3.6",
    "commander": "^9.4.1",
    "esbuild": "^0.15.10",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "json-schema-to-typescript": "^11.0.2",
    "mkdirp": "^1.0.4",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "postcss": "^8.4.17",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=16.17.0"
  },
  "peerDependencies": {
    "postcss": "*"
  }
}
