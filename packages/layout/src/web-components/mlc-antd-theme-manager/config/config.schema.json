{
  "$id": "https://raw.githubusercontent.com/micro-lc/micro-lc/main/packages/layout/src/web-components/mlc-antd-theme-manager/config",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Config",
  "description": "Micro-lc theme manager for Ant Design",
  "definitions": {
    "color": {
      "title": "Color",
      "description": "Color definition. It can be a Hex, 8-digit Hex, RGB, RGBA HSL, HSLA, HSV, HSVA, CSS color name string",
      "type": "string",
      "examples": [
        "#000",
        "#f0f0f6",
        "rgb (255, 0, 0)",
        "rgba (255, 0, 0, .5)",
        "hsl(0, 100%, 50%)",
        "hsla(0, 100%, 50%, .5)",
        "hsv(0, 100%, 100%)",
        "hsva(0, 100%, 100%, .5)",
        "red"
      ]
    }
  },
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },

    "vars-prefix": {
      "title": "VarsPrefix",
      "description": "Prefix to apply to the generated sed of variables. If more thant one is specified, a set for each prefix will be generated.",
      "default": "micro-lc",
      "examples": [
        "my-css-vars-prefix",
        [
          "my-css-vars-prefix",
          "my-other-set-of-css-vars-prefix"
        ]
      ],
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },

    "primary-color": {
      "$ref": "#/definitions/color",
      "default": "#1890FF"
    },

    "info-color": {
      "$ref": "#/definitions/color",
      "default": "#1890FF"
    },

    "success-color": {
      "$ref": "#/definitions/color",
      "default": "#52C41A"
    },

    "processing-color": {
      "$ref": "#/definitions/color",
      "default": "#1890FF"
    },

    "error-color": {
      "$ref": "#/definitions/color",
      "default": "#FF4D4F"
    },

    "warning-color": {
      "$ref": "#/definitions/color",
      "default": "#FAAD14"
    }
  },
  "additionalProperties": false
}
